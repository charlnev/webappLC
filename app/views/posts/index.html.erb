<div class="jumbotron" style="padding:100px">
  <h1 class="mb-4" style="font-size:60px">Digitrip</h1>
  <p class="lead" style= "font-size:40px;">Le monde à portée de clic</p>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <%= render post %>
        <%= image_tag post.image %>
        <div class="card-body">
          <%= link_to "Show this post", post, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class: "btn btn-success" %>